.actionButton {
    font-size: 30px;
    margin-top: 10px;
    margin-right: 10px;
    margin-bottom: 10px;
    margin-left: 10px;
    transition-property: scale;
    transition-duration: 0.2s;
    transition-timing-function: ease-out;
}

.actionButton:hover {
    scale: 1.2 1.2;
    transition-property: scale;
    transition-duration: 0.2s;
    transition-timing-function: ease-out;
}
